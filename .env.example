# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# Ably API key with capability: {"mcp-tunnel:<tenant_id>:*": ["publish", "subscribe"]}
ABLY_API_KEY=your-ably-api-key-here

# Tenant ID (must match between wrapper and worker)
TENANT_ID=tenant-123

# Comma-separated list of allowed hosts (supports wildcards)
ALLOWED_HOSTS=api.internal.company.com,*.internal.company.com

# Maximum request size in bytes (default: 10485760 = 10MB)
MAX_REQUEST_SIZE=10485760

# Rate limit per tenant in requests per minute (default: 100)
RATE_LIMIT_PER_TENANT=100
