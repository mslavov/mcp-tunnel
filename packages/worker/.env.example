# Ably API key with capability: {"mcp-tunnel:<tenant_id>:*": ["publish", "subscribe"]}
ABLY_API_KEY=your-ably-api-key-here

# Tenant ID (must match the wrapper's tenant ID)
TENANT_ID=tenant-123

# Comma-separated list of allowed hosts (optional, allows all if not set)
# Supports wildcards like *.example.com
ALLOWED_HOSTS=api.internal.company.com,*.internal.company.com

# Maximum request size in bytes (optional, default: 10485760 = 10MB)
MAX_REQUEST_SIZE=10485760

# Rate limit per tenant in requests per minute (optional, default: 100)
RATE_LIMIT_PER_TENANT=100
